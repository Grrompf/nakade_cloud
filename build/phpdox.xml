<phpdox xmlns="http://xml.phpdox.net/config">
    <project name="Nakade v2" source="../src" workdir="phpdox">
        <collector publiconly="false">
            <include mask="*.php" />
            <exclude mask="**Kernel**"/>

            <inheritance resolve="false">
                <!--  @resolve - Flag to enable/disable resolving of inheritance -->

            </inheritance>

        </collector>

        <generator output="./">
            <enrich base="${basedir}/logs">
                <source type="git" />
                <source type="phploc">
                    <file name="phploc.xml" />
                </source>
                <source type="pmd">
                    <file name="pmd.xml" />
                </source>
                <source type="checkstyle">
                    <file name="checkstyle.xml" />
                </source>
                <source type="phpunit">
                    <file name="crap4j.xml" />
                </source>
            </enrich>
            <build engine="html" enabled="true" output="api">
                <file extension="html" />
            </build>
        </generator>
    </project>
</phpdox>