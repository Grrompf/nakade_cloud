{# templates/default/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ 'home.title'|trans({}, 'messages') }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
    {{ encore_entry_link_tags('dgob') }}
{% endblock %}

{% block sidebar %}

{% endblock %}
{% block body %}
    <h2>{{ 'home.welcome'|trans({}, 'messages') }}</h2>
    <div class="container intro" style="width: 80%; text-align: left; color: red; font-size: larger">Während der Corona-Krise fällt der Spieltreff ersatzlos aus.
    </div>
    <div class="container intro" style="width: 70%">
        Nakade spielt in der Saison 2019/20 in der 2.Liga der <a title="externe Seite!" target="_blank" href="http://www.dgob.de/bundesliga/index.htm">Go-Bundesliga
            <i class="fa fa-external-link"></i></a> des <a title="externe Seite!" target="_blank" href="http://www.dgob.de">Deutschen Go-Bund e.V.
            <i class="fa fa-external-link"></i></a>.<br><br>
        Wir veranstalten einen regelmäßigen <a class="internal" title="zum Spieltreff" href="{{ path('app_clubs') }}">Spieltreff</a> in unmittelbarer Nähe zum Ku'Damm in Berlin.<br>
        <a class="internal" title="zur Registrierung" href="{{ path('app_register') }}">Registriere dich</a> und lerne uns kennen. Mögen die Steine mit dir sein!
    </div>
    <div class="container js-season-table">
        {% include 'bundesliga/_actualTable.html.twig' with { 'url': 'bundesliga_matchDay_select'} %}
    </div>

    {% if 1==2 %}
    <div class="nakade-quotes">
        <div id="carouselQuotes" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" >
                {% if quotes|length > 0 %}
                {% for quote in quotes %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <div>
                        {{ quote.quote}}
                        <div>{{ quote.details}}</div>
                    </div>
                </div>
                {% endfor %}
                {% else %}
                    <div class="carousel-item active">
                        <div>
                            Wenn du einen guten Zug siehst, such nach einen besseren.
                            <div>Emanuel Lasker (1868-1941), Schachweltmeister und Go-Enthusiast</div>
                        </div>
                    </div>
                {% endif %}

            </div>
            {% if quotes|length > 3 %}
{#            <a class="carousel-control-prev" href="#carouselQuotes" role="button" data-slide="prev">#}
{#                <span class="carousel-control-prev-icon" aria-hidden="true"></span>#}
{#                <span class="sr-only">Previous</span>#}
{#            </a>#}
{#            <a class="carousel-control-next" href="#carouselQuotes" role="button" data-slide="next">#}
{#                <span class="carousel-control-next-icon" aria-hidden="true"></span>#}
{#                <span class="sr-only">Next</span>#}
{#            </a>#}
            {% endif %}
        </div>
        {% endif %}

    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
    {{ encore_entry_script_tags('dgob') }}
{% endblock %}