{% extends 'base.html.twig' %}

{% block title %}Aktuelle Saison{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dgob') }}
{% endblock %}

{% block body %}
<div>

    <table class="bundesliga">
        <caption>{{ title }}</caption>
        <tr class="head">
            <td colspan ="3"></td>
            <td data-toggle="tooltip" data-placement="top" title="Spiele">Sp</td>
            <td data-toggle="tooltip" data-placement="top" title="Siege">s</td>
            <td data-toggle="tooltip" data-placement="top" title="Unentschieden">u</td>
            <td data-toggle="tooltip" data-placement="top" title="Niederlage">n</td>
            <td data-toggle="tooltip" data-placement="top" title="Brettpunkte">BP</td>
            <td data-toggle="tooltip" data-placement="top" title="Punkte">Pkt</td>
        </tr>
    {% for  data in table %}
        <tr class="{{ data.cSS }}">
            <td>{{ data.position }}</td>
            <td data-toggle="tooltip" data-placement="right" title='Tendenz'><img alt='Tendenz' src="{{ data.imgSrc }}"></td>
            <td class="team">{{ data.team }}</td>
            <td class="games">{{ data.games }}</td>
            <td>{{ data.wins }}</td>
            <td>{{ data.draws }}</td>
            <td>{{ data.losses }}</td>
            <td class="board">{{ data.boardPoints }}</td>
            <td class="points">{{ data.points }}</td>
        </tr>
    {% endfor %}
        <tr>
            <td colspan ="9" class="matchDaySelect">
            {% for  matchDay in matchDays %}
                <span class="
                    {% if actual == matchDay %}actual {% endif %}
                    {% if matchDay > lastMatchDay %}notPlayed{% endif %}">
                    {% if matchDay <= lastMatchDay %}
                        <a data-toggle="tooltip" title="
                            {% if actual == matchDay %}aktueller Spieltag
                            {% else %}zum Spieltag {{ matchDay }}
                            {% endif %}" href="
                                {% if actual == matchDay %}#
                            {% else %}
                                {{ path('bundesliga_table_matchDay', { 'matchDay': matchDay }) }}
                            {% endif %}
                            ">
                            {{ matchDay }}
                        </a>
                    {% else %}
                        {{ matchDay }}
                    {% endif %}
                </span>
            {% endfor %}
            </td>
        </tr>
    </table>

</div>
{% endblock %}
