{% extends 'base.html.twig' %}

{% block title %}Saisonhistorie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dgob') }}
{% endblock %}

{% block body %}

    <div class="container">
        <h2>Saisonarchiv</h2>
        <div>
            <select style="margin-bottom: 20px;" id="season-select" class="js-season-select form-control ml-1" data-url="{{ path('bundesliga_season_select') }}">
                {% for season in allSeasons %}
                    <option{% if season == model.season %} selected="selected"{% endif %} value="{{ season.id }}">
                        {{ season.title }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <center>
            <div class="js-season-table">
            {{ include('bundesliga/_seasonTable.html.twig') }}
            </div>
        </center>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('bundesliga') }}
{% endblock %}
