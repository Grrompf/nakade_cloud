{% extends 'base.html.twig' %}
{% form_theme emailForm _self %}

{% block form_row %}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}

    {{- form_label(form, null, {
        label_attr: { class: 'sr-only' }
    }) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_help(form) -}}
{% endblock %}

{% block title %}{{ 'profile.email.title'|trans({}, 'messages') }}!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block body %}
            <div class="col-sm-12">
                <h2>{{ 'profile.email.title'|trans({}, 'messages') }}</h2>
                {{ form_start(emailForm) }}
                <p style="text-align: left">Du wirst wieder eine <span style="color: #353b41; font-weight: bolder"><i class="fa fa-envelope-o"></i> Email</span>
                    erhalten mit der Bitte dein <span style="color: #353b41; font-weight: bolder"><i class="fa fa-user-o"></i> Konto</span> zu bestätigen.
                   Bitte guck nach der Änderung in dein Postfach. In der HTML-Mail findest du einen Button,
                    den du drücken musst, um den Vorgang abzuschliessen.</p>
                {{ form_row(emailForm.email, {
                    label: 'register.email',
                    attr: { placeholder: 'register.email.required', autocomplete: "on" },
                }) }}

                <a href="{{ path('app_profile_edit') }}"><button style="width: 120px; margin-top: 20px; margin-right: 20px;" type="button" class="btn btn-secondary">Abbrechen</button></a>
                <button style="width: 120px; margin-top: 20px" type="submit" class="btn btn-primary">{{ 'profile.update'|trans({}, 'messages') }}</button>
                {{ form_end(emailForm) }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}